<h1>Gestion des déplacements</h1>

<%= form_tag "deplacements", method: "post" do %>
  <input type="text" name="from" placeholder="Départ"/>
  <input type="text" name="to" placeholder="Arrivée"/>
  <input type="text" name="distance" placeholder="Distance"/>
  <input type="submit" value="Ajouter le déplacement"/>
<% end %>

<table border="1">
  <thead>
    <tr>
      <th colspan="3">Mes déplacements</th>
    </tr>
  </thead>
  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.from %></td>
        <td><%= travel.to %></td>
        <td><%= travel.distance %></td>
      </tr>
    <% end %>
  </tbody>
</table>

